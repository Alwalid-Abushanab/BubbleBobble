<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<?import eu.hansolo.tilesfx.tools.FlowGridPane?>

<?import javafx.scene.text.Font?>
<VBox alignment="CENTER" prefHeight="1080.0" prefWidth="640.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/16" fx:controller="upei.cs.LobbyController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Minivan Race Lobby">
        <font>
            <Font name="Arial Black" size="24.0" />
        </font>
    </Label>
    <Label text="Click the switch to start loading 100 racers at a time"/>
    <HBox alignment="CENTER">
        <VBox alignment = "CENTER">
            <ImageView  accessibleText="honda odyssey" fitHeight="250.0" fitWidth="495.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image
                        url="@images/odyssey.png"
                        backgroundLoading="true"
                        />
                </image>
            </ImageView>
            <Label
                    fx:id="worstOfTheBest"
                    text="Worst of the Best"
            />
        </VBox>

        <VBox alignment="CENTER">
            <ImageView  accessibleText="renault espace 1" fitHeight="250.0" fitWidth="495.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image
                            url="@images/renault.png"
                            backgroundLoading="true"
                    />
                </image>
            </ImageView>
            <Label
                    fx:id="bestOfTheWorst"
                    text="Best of the Worst"
            />
        </VBox>
    </HBox>
    <FlowGridPane fx:id="flowpane"
        noOfRows="1"
        noOfCols="3">
    </FlowGridPane>

</VBox>

